{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@images/*": ["./public/*"],
      "@Components": ["./src/components/index"],
      "@Services": ["./src/services/index"],
      "@types": ["./src/types/index"],
      "@stores": ["./src/store/index"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/SearchBar",
    "src/components/ErrorPopup",
    "src/components/BannerSlider/Slider.ts"
  ],
  "exclude": ["node_modules"]
}
